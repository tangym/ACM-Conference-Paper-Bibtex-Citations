 location = {Heidelberg, Germany},
 numpages = {12},
 pages = {916--927},
 publisher = {ACM},
 series = {UbiComp '16},
 title = {Tell Me What I See: Recognize RFID Tagged Objects in Augmented Reality Systems},
 year = {2016}
