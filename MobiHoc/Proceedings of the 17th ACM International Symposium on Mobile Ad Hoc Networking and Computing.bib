 numpages = {10},
 pages = {41--50},
 publisher = {ACM},
 series = {MobiHoc '16},
 title = {Throughput Characterization of Node-based Scheduling in Multihop Wireless Networks: A Novel Application of the Gallai-Edmonds Structure Theorem},
