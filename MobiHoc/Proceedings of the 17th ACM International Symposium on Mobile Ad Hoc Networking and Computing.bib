 isbn = {978-1-4503-4184-4},
 keyword = {demodulate-and-forward, full-duplex, relay},
 link = {http://doi.acm.org/10.1145/2942358.2942370},
 location = {Paderborn, Germany},
 numpages = {10},
 pages = {221--230},
