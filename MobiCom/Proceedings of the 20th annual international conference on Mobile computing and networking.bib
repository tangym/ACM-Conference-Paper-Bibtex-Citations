 doi = {10.1145/2639108.2639111},
 isbn = {978-1-4503-2783-1},
 keyword = {dah, localization, rfid, tagoram, tracking},
 link = {http://doi.acm.org/10.1145/2639108.2639111},
 location = {Maui, Hawaii, USA},
 numpages = {12},
 pages = {237--248},
