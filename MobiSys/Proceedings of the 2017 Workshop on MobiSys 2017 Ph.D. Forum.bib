 author = {Cheng, Bin},
 booktitle = {Proceedings of the 2017 Workshop on MobiSys 2017 Ph.D. Forum},
 doi = {10.1145/3086467.3086468},
 isbn = {978-1-4503-4957-4},
 keyword = {DSRC, Wi-Fi, performance evaluation, spectrum sharing},
 link = {http://doi.acm.org/10.1145/3086467.3086468},
 location = {Niagara Falls, New York, USA},
 numpages = {2},
 pages = {17--18},
 publisher = {ACM},
 series = {Ph.D. Forum '17},
 title = {Spectrum Sharing of Wi-Fi and DSRC In The 5.9 GHz Band},
 year = {2017}
}


