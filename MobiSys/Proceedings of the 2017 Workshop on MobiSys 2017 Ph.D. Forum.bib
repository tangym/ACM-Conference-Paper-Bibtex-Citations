 location = {Niagara Falls, New York, USA},
 numpages = {2},
 pages = {15--16},
 publisher = {ACM},
 series = {Ph.D. Forum '17},
 title = {Extended Abstract: Building Mobile Application Frameworks for Disconnected Data Management},
 year = {2017}
