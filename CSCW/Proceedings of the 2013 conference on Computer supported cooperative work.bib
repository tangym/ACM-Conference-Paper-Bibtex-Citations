 isbn = {978-1-4503-1331-5},
 location = {San Antonio, Texas, USA},
 note = {612130},
 publisher = {ACM},
 title = {CSCW '13: Proceedings of the 2013 Conference on Computer Supported Cooperative Work},
 year = {2013}
