 location = {San Antonio, Texas, USA},
 numpages = {10},
 pages = {193--202},
 publisher = {ACM},
 series = {CSCW '13},
 title = {Sometimes when We Touch: How Arm Embodiments Change Reaching and Collaboration on Digital Tables},
 year = {2013}
}


